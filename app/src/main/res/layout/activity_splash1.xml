<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity1">
    <RelativeLayout
            android:id="@+id/welcomescreen1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:background="#03BF46"
            tools:ignore="MissingConstraints">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/myTextView"

                    android:gravity="center"
                    android:text="Добро пожаловать!"
                    android:layout_marginLeft="32.5dp"
                    android:layout_marginTop="350dp"
                    android:textSize="42.5dp"
                    android:scaleType="center"
                    android:layout_width="800dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/pattaya"
                    android:outlineSpotShadowColor="#F9F9F9"
                    android:textColor="#FFFF"

                    android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>