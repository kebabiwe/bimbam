<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_privetctvie">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/text_2"
            android:fontFamily="sans-serif-condensed"
            android:text="Я - Ваш персональный помощник"
            android:layout_width="266dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/text_2"
            android:gravity="center_horizontal|top"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="162dp"
            tools:layout_editor_absoluteX="72dp"/>
    <TextView
            android:id="@+id/text_1"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="206dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="166dp"
            android:text="Привет! Меня зовут Эллай"
            android:textAppearance="@style/text_1"
            android:gravity="center_horizontal|top"

            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="140dp"
            tools:layout_editor_absoluteX="102dp"/>

    <!-- Auto layout, variables, and unit scale are not yet supported -->


    <ImageView
            android:id="@+id/image"
            android:src="@drawable/image"
            android:layout_width="236dp"
            android:layout_height="251dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clipToOutline="true"
            android:contentDescription="@string/todo" tools:layout_editor_absoluteY="203dp"
            tools:layout_editor_absoluteX="87dp"/>
    <RelativeLayout
            android:id="@+id/button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="@drawable/button0"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="585dp"
            tools:layout_editor_absoluteX="45dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>