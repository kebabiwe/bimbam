<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_confirmation">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            android:background="#F9F9F9"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:id="@+id/image_fox"
            android:src="@drawable/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/todo"/>
    <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerInParent="true"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:text="Регистрация прошла успешно"
            android:fontFamily="@font/pattaya"
            android:textAppearance="@style/title"
            android:lineSpacingExtra="0sp"
            android:translationY="-0.25sp"
            android:gravity="center_horizontal|top"
            tools:ignore="MissingConstraints"
            app:layout_constraintVertical_bias="0.175"
            app:layout_constraintHorizontal_bias="0.0"/>

    <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:background="@drawable/button_together1"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.772"
            android:id="@+id/button">

        <TextView
                android:id="@+id/some_id"
                android:textColor="#b1fcb7"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Начать работу"
                android:gravity="center"
                android:fontFamily="@font/opensans"
                android:textAppearance="@style/some_id"
                android:layout_centerInParent="true"/>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>