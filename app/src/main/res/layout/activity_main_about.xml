<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_about">

    <View
            android:id="@+id/rectangle_5"
            android:layout_width="424dp"
            android:layout_height="194dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_5" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-24dp" tools:layout_editor_absoluteX="-7dp"/>
    <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.023">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp">

                <TextView
                        android:id="@+id/some_id"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Эллай - Ваш помощник, разработанный специально для родителей и опекунов детей с ограниченными возможностями."
                        android:textAppearance="@style/some_id"
                        android:lineSpacingExtra="1sp"
                        android:translationY="-0.27sp"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="214dp" tools:layout_editor_absoluteX="29dp"/>

                <ImageView
                        android:layout_width="236dp"
                        android:layout_height="251dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:id="@+id/image"
                        android:src="@drawable/image"
                        android:contentDescription="@string/todo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintVertical_bias="0.612"/>

                <TextView
                        android:id="@+id/some_id98"
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image"
                        android:text="Он обеспечивает персонализированный и всесторонний уход за ребёнком, отслеживая важные аспекты его здоровья и развития. 1. Эллай — напомнит вам о медицинских процедурах, приёме лекарств, специальных упражнениях и других важных моментах по уходу за ребёнком. 2. Приложение предлагает календарь событий и задач, где можно отмечать выполненные действия, чтобы обеспечить систематичность и точность ухода. 3. Оно содержит базу знаний о различных состояниях ОВЗ, советы по уходу, а также возможность консультироваться с экспертами в случае необходимости 4. Эллай адаптируется под индивидуальные потребности ребёнка, предоставляя персонализированные рекомендации и расписание действий. 5. Эллай уведомит о предстоящих визитах к врачу, терапевтических сессиях и других важных событиях, связанных с заботой о здоровье ребёнка. 6. Эллай обладает дружественным интерфейсом, который легко использовать даже для тех, кто не имеет опыта работы с подобными приложениями."
                        android:textAppearance="@style/some_id"
                        android:lineSpacingExtra="1sp"
                        android:gravity="top"
                        android:layout_centerHorizontal="true"/>
        </ScrollView>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/logo1"
                android:id="@+id/imageView2"
                tools:ignore="MissingConstraints"/>

        <View
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/profile1"
                tools:ignore="MissingConstraints"/>
    </RelativeLayout>

    <TextView

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.104"
            android:id="@+id/title2"
            android:layout_width="286dp"
            android:layout_height="53dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textSize="37sp"
            android:fontFamily="@font/pattaya"
            tools:ignore="MissingConstraints"
            android:textColor="#FFFFFF"
            android:text="О приложении"
            tools:layout_editor_absoluteY="76dp"
            tools:layout_editor_absoluteX="62dp"
            android:lineSpacingExtra="-7sp"
            android:gravity="center_horizontal|top"/>





</androidx.constraintlayout.widget.ConstraintLayout>