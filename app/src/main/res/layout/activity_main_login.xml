<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_Login">

    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pattaya"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="Вход"
            android:textAppearance="@style/title"
            android:lineSpacingExtra="0sp"
            android:translationY="-0.25sp"

            android:gravity="top"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.177" app:layout_constraintHorizontal_bias="0.498"/>
    <RelativeLayout
            android:id="@+id/form"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="@drawable/form"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.376">


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:hint="Логин"
                android:fontFamily="@font/opensans"
                android:ems="10"
                android:textColor="@color/black"
                android:id="@+id/login"
                android:background="@android:color/transparent" android:layout_alignParentStart="true"
                android:layout_marginStart="21dp" android:layout_alignParentEnd="true" android:layout_marginEnd="55dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/form1"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            android:background="@drawable/form"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.499">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:hint="Пароль"
                android:fontFamily="@font/opensans"
                android:ems="10"
                android:textColor="@color/black"
                android:id="@+id/password"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true" android:layout_marginStart="21dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="55dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.623"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:elevation="4dp"
            android:background="@drawable/button_together1"
            tools:ignore="MissingConstraints">

        <TextView
                android:id="@+id/some_id"
                android:textColor="#b1fcb7"
                android:textSize="20dp"
                android:layout_width="143dp"
                android:layout_height="27dp"
                android:text="Войти"
                android:gravity="center_horizontal|top"
                android:fontFamily="@font/opensans"
                android:textAppearance="@style/some_id"
                android:layout_centerInParent="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>