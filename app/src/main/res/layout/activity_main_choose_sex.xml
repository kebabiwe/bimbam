<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="320dp"
        android:layout_height="108dp"
        tools:context=".MainActivity_ChooseSex">
    <RelativeLayout
            android:id="@+id/sex"
            android:layout_width="320dp"
            android:layout_height="108dp"
            android:clipToOutline="true"
            android:background="@drawable/sex"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >
        <View
                android:id="@+id/vector_10"
                android:layout_width="288dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="54dp"
                android:background="@drawable/vector_10"
                android:layout_alignParentEnd="true" android:layout_marginEnd="16dp"
                android:layout_alignParentStart="true" android:layout_marginStart="16dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="54dp"/>
        <TextView
                android:id="@+id/maleButt"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:text="Мужской"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="234dp" android:layout_alignParentStart="true"
                android:layout_marginStart="16dp" android:layout_marginTop="19dp" android:layout_alignParentTop="true"/>
        <TextView
                android:id="@+id/femaleButton"
                android:layout_width="69dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="Женский"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:textAppearance="@style/some_id"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="18dp"
                android:layout_alignParentStart="true" android:layout_marginStart="15dp" android:layout_marginTop="25dp"
                android:layout_below="@+id/maleButt"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>