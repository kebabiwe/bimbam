<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivityy">
    <RelativeLayout
            android:id="@+id/welcomescreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:background="#03BF46"
            tools:ignore="MissingConstraints"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/myTextView"
                android:layout_width="175.41dp"
                android:layout_height="53.03dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Эллай"
                android:textSize="49dp"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/pattaya"
                android:outlineSpotShadowColor="#F9F9F9"
                android:textColor="#FFFF"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>