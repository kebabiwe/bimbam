<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_registrationAcc">
    <RelativeLayout
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:background="#F9F9F9"
            tools:ignore="MissingConstraints">

        <RelativeLayout
                android:id="@+id/form"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                android:background="@drawable/form"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="410dp">

            <TextView
                    android:id="@+id/some_id2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerVertical="true"
                    android:text="Пароль"
                    android:textAppearance="@style/some_id"
                    android:gravity="top"/>
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/form0"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                android:background="@drawable/form"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="313dp">
            <TextView
                    android:id="@+id/e_mail"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerVertical="true"
                    android:text="@string/e_mail"
                    android:textAppearance="@style/e_mail"
                    android:gravity="top"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/form4"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                android:background="@drawable/form"
                android:layout_marginLeft="35dp"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="216dp">

            <TextView
                    android:id="@+id/some_id"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerVertical="true"
                    android:text="Имя"
                    android:textAppearance="@style/some_id"
                    android:gravity="top"/>
        </RelativeLayout>


        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:text="Регистрация"
                android:textAppearance="@style/title"
                android:lineSpacingExtra="0sp"
                android:gravity="center_vertical|center_horizontal"
                android:fontFamily="@font/pattaya"
                android:layout_marginTop="106dp"
                app:layout_constraintTop_toTopOf="parent"/>



        <RelativeLayout
                android:id="@+id/form3"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_marginTop="506dp"
                android:layout_marginLeft="35dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                android:background="@drawable/form">

            <TextView
                    android:id="@+id/some_id1"
                    android:layout_width="160dp"
                    android:layout_height="41dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerVertical="true"
                    android:text="Повторите пароль"
                    android:textAppearance="@style/some_id"
                    android:gravity="top"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/button"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="607dp"
                android:background="@drawable/button4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>